<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <style
        name="MyTheme" parent="MyTheme.Base">
        <item
            name="android:windowBackground">@android:color/white</item>
    </style>
    <style
        name="MyTheme.Splashscreen" parent="MyTheme.Base">
        <item
            name="android:windowAnimationStyle">@null</item>
    </style>
 <!--  Base theme applied no matter what API  -->
    <style
        name="MyTheme.Base" parent="Theme.AppCompat.Light">
        <item
            name="windowNoTitle">true</item>
        <item
            name="windowActionBar">false</item>
        <item
            name="windowActionBar">false</item>
        <!--  your app branding color for the app bar  -->
        <item
            name="colorPrimary">@android:color/white</item>
        <!--  darker variant for the status bar and contextual app bars  -->
        <item
            name="colorPrimaryDark">@android:color/black</item>
        <!--  theme UI controls like checkboxes and text fields  -->
        <item
            name="colorAccent">@android:color/black</item>
        <item
            name="android:windowBackground">@android:color/white</item>
        <item
            name="android:colorBackground">@android:color/white</item>
    </style>
</resources>
